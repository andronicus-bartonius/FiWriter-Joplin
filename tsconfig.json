{
	"compilerOptions": {
		"outDir": "./dist/",
		"module": "commonjs",
		"target": "es2015",
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"allowJs": true,
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@core/*": ["src/core/*"],
			"@ui/*": ["src/ui/*"],
			"@providers/*": ["src/providers/*"],
			"@kg/*": ["src/kg/*"],
			"@rag/*": ["src/rag/*"],
			"@workflows/*": ["src/workflows/*"]
		}
	}
}
